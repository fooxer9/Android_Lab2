<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp" app:srcCompat="@drawable/loading"
            android:id="@+id/bigImageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="128dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="128dp"
            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.043"
            android:scaleType="centerCrop"/>
    <TextView
            android:text="Just item's name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bigNameTextView"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp" android:textSize="24sp"
            android:textColor="@color/colorAccent" android:textStyle="bold" android:textAlignment="center"/>
    <TextView
            android:text="helptext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/bigHelpTextView" android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/bigImageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" android:textAlignment="center"/>
</android.support.constraint.ConstraintLayout>