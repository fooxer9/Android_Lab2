<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp" app:srcCompat="@drawable/compiled"
            android:id="@+id/item_imageView" android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nameTextView" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/item_imageView" android:textSize="14sp" android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="helptext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/helpTextView" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/nameTextView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toEndOf="@+id/item_imageView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            app:layout_constraintHorizontal_bias="0.046" android:textSize="12sp"/>
</android.support.constraint.ConstraintLayout>